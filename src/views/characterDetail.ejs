<!DOCTYPE html>
<html>
  <%- include('partials/head') %>
  <body>
    <%- include('partials/header') %>
    <div class="characterContainer">

      <div>

        <img src="/image/characters/<%= character.image %>" style="max-width: 300px;" alt="">
        
        <a href="/characters/edit/<%= character.id %> "><i class="fas fa-pencil-alt"></i>
        </a>

        <form action="/characters/edit/<%= character.id %>?_method=DELETE" method="POST" >
          <button class="btn" type="submit"><i class="fas fa-trash-alt"></i></button>
        </form>
      </div>

      <div>

        <h2> <%= character.name %> </h2>
        <p><%= character.history %></p>
        <p>Edad:  <%= character.age %></p> 
        <p>Peliculas: </p>
        <p>Series: </p>
      </div>
        


    </div>
  </body>
</html>
